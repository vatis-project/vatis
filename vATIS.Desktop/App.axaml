<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Vatsim.Vatis.App"
             Name="vATIS"
             RequestedThemeVariant="Dark">
    <NativeMenu.Menu>
        <NativeMenu/>
    </NativeMenu.Menu>
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>
        <StyleInclude Source="avares://Avalonia.Controls.TreeDataGrid/Themes/Fluent.axaml"/>
        <StyleInclude Source="avares://AvaloniaEdit/Themes/Fluent/AvaloniaEdit.xaml" />
        <StyleInclude Source="/Ui/Styles/DarkComboBox.axaml"/>
        <StyleInclude Source="/Ui/Styles/AvaloniaEditorStyles.axaml"/>
        <StyleInclude Source="/Ui/Styles/ScrollViewerStyles.axaml"/>
    </Application.Styles>
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Ui/Styles/Buttons.axaml"/>
                <ResourceInclude Source="/Ui/Styles/TextBox.axaml"/>
                <ResourceInclude Source="/Ui/Styles/CheckBox.axaml"/>
                <ResourceInclude Source="/Ui/Styles/RadioButton.axaml"/>
                <ResourceInclude Source="/Ui/Controls/CustomTabControl.axaml"/>
                <ResourceInclude Source="/Ui/Controls/CustomTabItem.axaml"/>
                <ResourceInclude Source="/Ui/Controls/GroupBox/GroupBoxBasic.axaml"/>
                <ResourceInclude Source="/Ui/Controls/GroupBox/GroupBoxClassic.axaml"/>
                <ResourceInclude Source="/Ui/Styles/ScrollBarResources.axaml"/>
                <ResourceInclude Source="/Ui/Controls/Notification/Notification.axaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        <FontFamily x:Key="UiFont">/Assets/Fonts#Nunito</FontFamily>
        <FontFamily x:Key="Icons">/Assets/Fonts#mdl2</FontFamily>
        <FontFamily x:Key="Monospace">/Assets/Fonts#DM Mono</FontFamily>
        <StaticResource x:Key="ContentControlThemeFontFamily" ResourceKey="UiFont" />
        <x:Double x:Key="ControlContentThemeFontSize">13</x:Double>
    </Application.Resources>
</Application>
